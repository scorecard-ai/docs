{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Scorecard AI Docs",
  "colors": {
    "primary": "#ff6e3e",
    "light": "#ff6e3e",
    "dark": "#ff6e3e"
  },
  "background": {
    "decoration": "grid"
  },
  "favicon": "/favicon.png",
  "logo": {
    "light": "/icons/avatar-light.png",
    "dark": "/icons/avatar-dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Contact",
        "href": "https://www.scorecard.io/book-a-demo"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Sign In",
      "href": "https://app.scorecard.io/"
    }
  },
  "footer": {
    "socials": {
      "website": "https://www.scorecard.io/",
      "github": "https://github.com/scorecard-ai",
      "linkedin": "https://www.linkedin.com/company/scorecard-ai",
      "twitter": "https://x.com/scorecardai"
    }
  },
  "integrations": {
    "ga4": {
      "measurementId": "G-Y98MZSSCE3"
    }
  },
  "api": {
    "examples": {
      "languages": ["javascript", "python", "go", "java", "curl"]
    }
  },
  "redirects": [
    {
      "source": "/quickstart/python",
      "destination": "/intro/quickstart"
    },
    {
      "source": "/quickstart/node-js",
      "destination": "/intro/quickstart"
    },
    {
      "source": "/docs/documentation/introduction/:slug*",
      "destination": "/intro/:slug*"
    },
    {
      "source": "/docs/documentation/how-to-use-scorecard/quickstart/:slug*",
      "destination": "/intro/quickstart"
    },
    {
      "source": "/docs/changelog/product-updates",
      "destination": "/changelog"
    },
    {
      "source": "/docs/api-reference/overview",
      "destination": "/api-reference/overview"
    },
    {
      "source": "/docs/documentation/:slug*",
      "destination": "/:slug*"
    },
    {
      "source": "/how-to-use-scorecard/ci-cd-with-github-actions",
      "destination": "/how-to-use-scorecard/trigger-run-with-github-actions"
    }
  ],
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "intro/overview",
              "intro/quickstart",
              "intro/systems",
              "intro/what-is-scorecard",
              "intro/system-architecture"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "features/projects",
              "features/playground",
              "features/prompt-management",
              "features/tracing",
              "features/privacy-by-design",
              "features/automated-scoring",
              "features/best-in-class-metrics",
              "features/testset-management",
              "features/a-b-comparison",
              "features/ai-guardrails",
              "features/run-inspection",
              "features/ai-proxy"
            ]
          },
          {
            "group": "How To Use Scorecard",
            "pages": [
              "how-to-use-scorecard/rag-retrieval-augmented-generation",
              "how-to-use-scorecard/trigger-run-with-github-actions"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": ["api-reference/overview"]
          },
          {
            "group": "Projects",
            "pages": [
