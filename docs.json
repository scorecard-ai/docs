              "api-reference/delete-multiple-testcases"
            ]
          },
          {
            "group": "Metrics",
            "pages": [
              "api-reference/create-metric",
              "api-reference/update-metric"
            ]
          },
          {
            "group": "Runs",
            "pages": ["api-reference/create-run"]
          },
          {
            "group": "Records",
            "pages": ["api-reference/create-record"]
          },
          {
            "group": "Scores",
