    {
      "source": "/docs/documentation/how-to-use-scorecard/quickstart/:slug*",
      "destination": "/intro/sdk-quickstart"
    },
    {
      "source": "/docs/changelog/product-updates",
      "destination": "/changelog"
    },
    {
      "source": "/docs/api-reference/overview",
      "destination": "/api-reference/overview"
    },
    {
      "source": "/docs/documentation/:slug*",
      "destination": "/:slug*"
