{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Scorecard AI Docs",
  "colors": {
    "primary": "#ff6e3e",
    "light": "#ff6e3e",
    "dark": "#ff6e3e"
  },
  "background": {
    "decoration": "grid"
  },
  "favicon": "/favicon.png",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Contact",
        "href": "https://www.scorecard.io/contact"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Sign In",
      "href": "https://app.getscorecard.ai/"
    }
  },
  "footer": {
    "socials": {
      "website": "https://www.scorecard.io/",
      "github": "https://github.com/scorecard-ai"
    }
  },
  "integrations": {
    "ga4": {
      "measurementId": "G-Y98MZSSCE3"
    }
  },
  "api": {
    "examples": {
      "languages": ["javascript", "python", "curl", "go", "java"]
    }
  },
  "redirects": [
    {
      "source": "/docs/documentation/introduction/:slug*",
      "destination": "/intro/:slug*"
    },
    {
      "source": "/docs/documentation/how-to-use-scorecard/quickstart/:slug*",
      "destination": "/quickstart/:slug*"
    },
    {
      "source": "/docs/changelog/product-updates",
      "destination": "/changelog"
    },
    {
      "source": "/docs/docs/glossary",
      "destination": "/glossary"
    },
    {
      "source": "/docs/api-reference/overview",
      "destination": "/api-reference/overview"
    },
    {
      "source": "/docs/documentation/:slug*",
      "destination": "/:slug*"
    }
  ],
  "navigation": {
    "tabs": [
      {
