{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Scorecard Docs",
  "colors": {
    "primary": "#ff6e3e",
    "light": "#ff6e3e",
    "dark": "#ff6e3e"
  },
  "background": {
    "decoration": "grid"
  },
  "icons": {
    "library": "lucide"
  },
  "favicon": "/favicon.png",
  "logo": {
    "light": "/icons/avatar-light.png",
    "dark": "/icons/avatar-dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Contact",
        "href": "https://www.scorecard.io/book-a-demo"
      }
