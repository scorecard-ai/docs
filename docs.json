    {
      "source": "/intro/quickstart",
      "destination": "/intro/sdk-quickstart"
    },
    {
      "source": "/quickstart/python",
      "destination": "/intro/sdk-quickstart"
    },
    {
      "source": "/quickstart/node-js",
      "destination": "/intro/sdk-quickstart"
    },
