    {
      "source": "/how-to-use-scorecard/ci-cd-with-github-actions",
      "destination": "/how-to-use-scorecard/trigger-run-with-github-actions"
    },
    {
      "source": "/features/prompt-management",
      "destination": "/features/prompts"
    },
    {
      "source": "/features/testset-management",
      "destination": "/features/testsets"
